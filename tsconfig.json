{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "outDir": "dist",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "src"
  },
  "exclude": [
    "assets",
    "node_modules"
  ]
}

